{
  "name": "@porsche-design-system/browser-notification-banner",
  "version": "1.0.0-rc.1",
  "scope": "@porsche-design-system",
  "private": true,
  "author": "Dr. Ing. h.c. F. Porsche AG",
  "contributors": [
    "Oliver Hook <oliver.hook@mhp.com>",
    "Stephan Schröter <stephan.schroeter@mhp.com>",
    "Matthias Hägele <matthias.haegele@mhp.com>",
    "Bernd Hacker <bernd.hacker@mhp.com>"
  ],
  "license": "SEE LICENSE IN https://designsystem.porsche.com",
  "description": "Browser Notification Banner to show end of support of IE11",
  "keywords": [
    "Porsche",
    "Notification",
    "Banner",
    "IE11",
    "Edge"
  ],
  "homepage": "https://github.com/porscheui/porsche-browser-notification-banner#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/porscheui/porsche-browser-notification-banner.git"
  },
  "bugs": {
    "url": "https://github.com/porscheui/porsche-ui-contribution/issues"
  },
  "scripts": {
    "postbuild": "yarn partial",
    "start": "yarn build && http-server ./www -p 4201",
    "build": "yarn clean:build && yarn build:generate && yarn build:cdn && yarn build:partial && yarn build:lib && yarn build:package && yarn build:www",
    "build:generate": "ts-node --project 'tsconfig.node.json' './scripts/generate.ts'",
    "build:partial": "ts-node --project 'tsconfig.node.json' './scripts/partial.ts'",
    "build:lib": "rollup -c rollup.config.js",
    "build:cdn": "rollup -c rollup.config.cdn.js",
    "build:package": "ts-node --project 'tsconfig.node.json' './scripts/package.ts'",
    "build:www": "mkdir -p ./www/cdn && cp -r ./public/. ./www && cp -r ./cdn/. ./www/cdn",
    "partial": "partial=$(node -e 'console.log(require(\"./dist\").includeOverlay().replace(/(\\\\[bd\\/]|&)/g, \"\\\\$1\"))') && regex='<!--PLACEHOLDER-->|<script>.*browser-notification.*<\\/script>' && sed -E -e \"s@$regex@$partial@\" public/index.html | tee public/index.tmp.html && rm public/index.html && mv public/index.tmp.html public/index.html",
    "clean": "yarn clean:node_modules && yarn clean:build",
    "clean:node_modules": "rm -rf ./node_modules && rm -rf ./yarn-error.log",
    "clean:build": "rm -rf ./dist && rm -rf ./cdn && rm -rf ./www"
  },
  "devDependencies": {
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-typescript": "^6.0.0",
    "@types/html-minifier": "^4.0.0",
    "html-minifier": "^4.0.0",
    "http-server": "^0.12.3",
    "prettier": "^2.1.2",
    "rollup": "^2.28.2",
    "rollup-plugin-terser": "^7.0.2",
    "ts-node": "^9.0.0",
    "tslib": "^2.0.1",
    "typescript": "^4.0.3"
  }
}
