{
  "name": "@porsche-design-system/browser-notification-banner",
  "version": "1.0.0-beta.2",
  "scope": "@porsche-design-system",
  "private": true,
  "author": "Dr. Ing. h.c. F. Porsche AG",
  "contributors": [
    "Oliver Hook <oliver.hook@mhp.com>",
    "Stephan Schröter <stephan.schroeter@mhp.com>",
    "Matthias Hägele <matthias.haegele@mhp.com>",
    "Bernd Hacker <bernd.hacker@mhp.com>"
  ],
  "license": "SEE LICENSE IN https://designsystem.porsche.com",
  "description": "Browser Notification Banner to show end of support of IE11",
  "keywords": [
    "Porsche",
    "Notification",
    "Banner",
    "IE11",
    "Edge"
  ],
  "homepage": "https://github.com/porscheui/porsche-browser-notification-banner#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/porscheui/porsche-browser-notification-banner.git"
  },
  "bugs": {
    "url": "https://github.com/porscheui/porsche-ui-contribution/issues"
  },
  "scripts": {
    "start": "yarn build && http-server ./www -p 4201",
    "build": "yarn clean:build && yarn build:package && yarn build:www",
    "build:package": "rollup -c rollup.config.js && ts-node --project 'tsconfig.node.json' './scripts/package.ts'",
    "build:www": "mkdir -p ./www/cdn && cp -r ./public/. ./www && cp -r ./cdn/. ./www/cdn",
    "clean": "yarn clean:node_modules && yarn clean:build",
    "clean:node_modules": "rm -rf ./node_modules && rm -rf ./yarn-error.log",
    "clean:build": "rm -rf ./dist && rm -rf ./cdn && rm -rf ./www"
  },
  "devDependencies": {
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^9.0.0",
    "@rollup/plugin-typescript": "^5.0.2",
    "http-server": "^0.12.3",
    "rollup": "^2.23.0",
    "rollup-plugin-terser": "^7.0.1",
    "ts-node": "^9.0.0",
    "tslib": "^2.0.1",
    "typescript": "^4.0.2"
  }
}
